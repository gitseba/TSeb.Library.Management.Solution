<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TSeb.Library.Management.RazorPages.Mvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TSeb.Library.Management.RazorPages.Mvc.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <partial name="_Navbar.cshtml" />
        </nav>
    </header>

    <main id="main-container">
        @RenderBody()
    </main>

    <footer class="footer text-muted">
        <partial name="_Footer.cshtml" />
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @if (IsSectionDefined("CustomScripts"))
    {
        @RenderSection("CustomScripts", required: true)
    }
</body>
</html>
